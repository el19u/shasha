<div class="flex items-center h-10 px-5 text-white bg-sky-400 rounded">
  <h2>
    <%= link_to("App Clone", root_path) %>
  </h2>

  <div class="ml-auto">
    <% if current_user.present? %>
      <%= link_to "Logout", "logout", data: { "turbo-method": :delete } %>
    <% else %>
      <div class="flex gap-5">
        <%= link_to("Register", new_user_path) %>
        <%= link_to("Login", login_path) %>
      </div>
    <% end %>
  </div>
</div>
